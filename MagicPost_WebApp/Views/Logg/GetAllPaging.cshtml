@using System.Globalization;


@{
    ViewData["Title"] = "OrderPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var culture = CultureInfo.CurrentCulture.Name;
}
@model HomeViewModel
<div class="container">
    <div class="row">
        @if (User.IsInRole("TruongDiemGiaoDich"))
        {
            <button class="button"><a href="/vi/Log/DiemGiaoDichNhan/2" style="color:white">Hàng nhận</a></button>
            <button class="button"><a href="/vi/Log/DiemGiaoDichGui/2" style="color:white">Hàng gửi</a></button>
        }
        @if (User.IsInRole("TruongDiemTapKet"))
        {
            <button class="button">
                <a href="/vi/Log/DiemTapKetNhan/2" style="color:white">Hàng nhận</a>
             </button>
            <button class="button">
                <a href="/vi/Log/DiemTapKetGui/2" style="color:white">Hàng gửi</a>
            </button>
        }
        @if (User.IsInRole("LanhDao"))
        {
            <button class="button">
                <a href="/vi/Log/PagingReceive" style="color:white">Hàng nhận</a>
                
            </button>
            <button class="button">
                <a href="/vi/Log/PagingSend" style="color:white">Hàng gửi</a>
                
            </button>
        }
    </div>
</div>
<style>
    .row {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .button {
        display: flex;
        height: 3.5em;
        width: 100px;
        align-items: center;
        justify-content: center;
        background-color: #eeeeee4b;
        border-radius: 8px;
        letter-spacing: 1px;
        transition: all 0.2s linear;
        cursor: pointer;
        border: none;
        background: #007BFF;
        margin: 50px;
    }

    .button:hover {
        transform: scale(1.2)
    }


</style>