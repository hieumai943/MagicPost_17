@using System.Globalization;


@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var culture = CultureInfo.CurrentCulture.Name;
}
@model HomeViewModel
@if (User.IsInRole("GiaoDichVien"))
{
    // Code to execute if the user is in the "giaodichVien" role
    <div class="col-md-6 col-xs-12">
        <a class="btn btn-success" asp-action="Create" asp-controller="Order">Tạo mới</a>
    </div>
}

<div class="ShowOrder">
    <table>
        <thead>
            <tr>
                <th>Tên Người Gửi</th>
                <th>Tên Người Nhận</th>
                <th>Địa chỉ gửi hàng</th>
                <th>Đồ Vật</th>
                <th>Số điện thoại người nhận</th>
                <th>Địa chỉ nhận</th>
                <th>Cước</th>
                <th>Khối lượng</th>
                <th>Trạng thái đơn hàng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders.items)
            {

                <tr>
                    <td>@order.SendName</td>
                    <td>@order.ReceiveName</td>
                    <td>@order.SendAddress</td>
                    <td>@order.Code</td>
                    <td>@order.ReceivePhoneNumber</td>
                    <td>@order.ReceiveAddress</td>
                    <td>@order.Cuoc</td>
                    <td>@order.KhoiLuong</td>
                    <td>@order.Status</td>
                </tr>
            }
            <!-- Thêm các hàng khác tùy vào số đơn hàng -->
        </tbody>
    </table>
</div>


<style>
    /* CSS để tạo bảng */
    table {
        border-collapse: collapse;
        width: 100%;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #3498db;
        color: #fff;
    }

    .ShowOrder{
        height: 100vh;
    }
</style>
