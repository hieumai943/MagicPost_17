@using MagicPost_ViewModel.Orders;
@using System.Globalization;

@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;
@*  -> se lay dc ra theo name. Tuc la ban dau minh *@
@* hay de cac ten vao trong the <localization> nham dich no sang tieng viet o ViewLocalization resource nhung lan nay ta lay du lieu do ra vao trong  *@
@*  url  ->  no se giup url cua minh co the da ngon ngu *@
@model HomeViewModel;
@{
    var culture = CultureInfo.CurrentCulture.Name;
}
@{
    ViewData["Title"] = "Home Page";
}
@section slider{
    <div id="carouselBlk">
        <div id="myCarousel" class="carousel slide">
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Slides.Count; i++)
                {
                    var slide = Model.Slides[i];
                    <div class="item @(i ==0?"active":"") ">
                        <div class="container">
                            <a href="@slide.Url"><img style="width:100%" src=@slide.Image alt=@slide.Name /></a>
                            <div class="carousel-caption">
                                <h4>@slide.Name</h4>
                                <p>@slide.Description</p>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
        </div>
    </div>
}
<div class="well well-small">
   
    <div class="row-fluid">
        <div id="featured" class="carousel slide">
            <div class="carousel-inner">
                @{
                    List<List<OrderVm>> AllOrders = new List<List<OrderVm>>();
                    List<OrderVm> featuredPart = new List<OrderVm>();
                }

              
                @for (int index = 0; index < AllOrders.Count; index++)
                {
                    <div class="item @(index == 0?"active":"")">
                        <ul class="thumbnails">
                            @foreach (var item in AllOrders[index])
                            {
                                <li class="span3">
                                    <div class="thumbnail">
                                        <i class="tag"></i>
                                        <a href="product_details.html"><img src="@(Configuration["BaseAddress"] + item.ThumbnailImage)" alt="@item.Code"></a>
